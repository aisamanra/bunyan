  other-modules:       Bunyan.App
                       Bunyan.Log
                       Bunyan.Pretty
  hs-source-dirs:      src
  build-depends:       base >=4.7 && <5
                     , brick
                     , containers
                     , process
                     , text
                     , vty
  default-language:    Haskell2010
  default-extensions:  ScopedTypeVariables

executable bunyan
  hs-source-dirs:      bunyan
  main-is:             Main.hs
  other-modules:       Options
  default-extensions:  ScopedTypeVariables
  ghc-options:         -Wall -threaded
